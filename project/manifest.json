{
    "manifest_version": 2,
    "name": "Analisador de Privacidade",
    "version": "1.0",
    "description": "Analisa páginas web quanto à privacidade do usuário.",
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "cookies",
      "tabs",
      "storage",
      "<all_urls>"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content_script.js"],
        "run_at": "document_start"
      }
    ],
    "icons": {
      "16": "icons/padlock.png"
    },
    "browser_action": {
      "default_icon": {
        "16": "icons/padlock.png"
      },
      "default_title": "Analisador de Privacidade"
    }
  }
  